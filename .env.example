# ========================================
# Medusa V2 - Environment Variables Example
# ========================================

NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medusa_db
DB_USERNAME=postgres
DB_PASSWORD=password
DATABASE_URL=postgres://postgres:password@localhost:5432/medusa_db

# Redis
REDIS_URL=redis://localhost:6379

# Security (Generate new ones for production)
JWT_SECRET=something_very_secret_and_long
COOKIE_SECRET=something_else_very_secret

# CORS
STORE_CORS=http://localhost:8000
ADMIN_CORS=http://localhost:9000,http://127.0.0.1:9000
AUTH_CORS=http://localhost:9000,http://127.0.0.1:9000

# URLs
MEDUSA_BACKEND_URL=http://localhost:7001
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:7001

# Storage (MinIO or S3)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=medusa
MINIO_PUBLIC_URL=http://localhost:9000

# Google Auth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
